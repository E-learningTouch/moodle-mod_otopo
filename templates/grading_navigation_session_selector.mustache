{{!
    @template mod_assign/grading_navigation_session_selector

    The template HTML for the session selector in the top right corner.
}}
<div class="alignment">
    <span data-region="input-field">
        <select data-action="change-session" class="custom-select">
            {{#sessions}}
                <option value="{{id}}" {{#selected}}selected{{/selected}}>{{#str}} session, otopo{{/str}} {{key}} {{^validated}}({{#str}} notvalidated, otopo{{/str}}){{/validated}}</option>
            {{/sessions}}
            {{^sessions}}
                <option value="0" {{#selected}}selected{{/selected}}>{{#str}} nosession, otopo{{/str}} {{key}}</option>
            {{/sessions}}
        </select>
    </span>
    <p id="otopo_lastmodification" class="mt-2"></p>
</div>
