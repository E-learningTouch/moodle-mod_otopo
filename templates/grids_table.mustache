{{!
    @template mod_otopo/preview_grids
    
    The template HTML for the grid table.
}}
<div class="table-responsive">
    <table class="table table-bordered">
        {{#items}}
            <thead>
                <tr>
                    <th scope="col" colspan="{{nbrdegreesmax}}" class="text-center" style="color: {{color}};">{{name}}</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    {{#degrees}}
                        <th>{{#str}} itemdegree, otopo {{/str}} {{index}}</th>
                    {{/degrees}}
                </tr>
                <tr>
                    {{#degrees}}
                        <td>{{name}}</td>
                    {{/degrees}}
                </tr>
                {{#onedegreehasdesc}}
                    <tr>
                        {{#degrees}}
                            <td>{{{description}}}</td>
                        {{/degrees}}
                    </tr>
                {{/onedegreehasdesc}}
            </tbody>
        {{/items}}
    </table>
</div>
